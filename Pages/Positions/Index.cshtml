@model VismaTest.Pages.Positions.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].PositionTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].PositionStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position[0].PositionEndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Position) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PositionTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionEndDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PositionID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PositionID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PositionID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
