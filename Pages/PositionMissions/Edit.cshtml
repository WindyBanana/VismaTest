@page
@model VismaTest.Pages.PositionMissions.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>PositionMission</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PositionMission.PositionTaskID" />
            <div class="form-group">
                <label asp-for="PositionMission.PositionTitle" class="control-label"></label>
                <select asp-for="PositionMission.PositionTitle" class="form-control" asp-items="ViewBag.PositionTitle"></select>
            </div>
            <div class="form-group">
                <label asp-for="PositionMission.MissionName" class="control-label"></label>
                <select asp-for="PositionMission.MissionName" class="form-control" asp-items="ViewBag.MissionName"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
